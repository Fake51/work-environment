set smartindent
set tabstop=4
set softtabstop=4
set expandtab
set cursorline
set number
set autoindent
set ignorecase
set shiftwidth=4
set foldmethod=marker
set incsearch
set hlsearch
set hidden
set ruler
syntax enable
set encoding=utf8
set tags=./tags;

let mapleader = ","

" powerline
set rtp+=~/.vim/bundle/powerline/powerline/bindings/vim

" color stuff
set background=dark
colorscheme solarized
call togglebg#map("<Leader>bg")
