set smartindent
set tabstop=4
set softtabstop=4
set expandtab
set cursorline
set number
set autoindent
set ignorecase
set shiftwidth=4
set foldmethod=marker
set incsearch
set hlsearch
set hidden
set ruler
syntax enable
set encoding=utf8
set tags=./tags;
set relativenumber

let mapleader = ","

" powerline
set rtp+=~/.vim/bundle/powerline/powerline/bindings/vim

" color stuff
set background=dark
colorscheme solarized
call togglebg#map("<Leader>bg")

" ultisnips settings - tmux blocks the default keys
let g:UltiSnipsJumpForwardTrigger="<tab>"
let g:UltiSnipsJumpBackwardTrigger="<s-tab>"

" vimux
let g:VimuxOrientation = "h"
let g:VimuxHeight = "40"

" tslime
let g:tslime_ensure_trailing_newlines = 1
let g:tslime_normal_mapping = '<Leader>rs'
let g:tslime_visual_mapping = '<Leader>rs'
let g:tslime_vars_mapping = '<Leader>S'
